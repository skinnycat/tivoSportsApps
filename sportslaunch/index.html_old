<body onload="onloading()" bgcolor="#E6E6FA">

    <script language="JavaScript">
        var baseURL = "http://sit-tkestrel.interactive.sky.com/uatcontent/tivoextra/";

        function onloading() {
            document.onkeydown = function (event) {

                switch (event.keyCode) {
                    case 49:
                    window.open(baseURL + "app1/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 50:
                    window.open(baseURL + "app2/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 51:
                    window.open(baseURL + "app4/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 52:
                    window.open(baseURL + "app5/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 53:
                    window.open(baseURL + "app6/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 54:
                    window.open(baseURL + "app8/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 55:
                    window.open(baseURL + "gen1/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 56:
                    window.open(baseURL + "gen2/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 57:
                    window.open(baseURL + "gen3/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 48:
                    window.open(baseURL + "gen4/sportsapp.html?ishd=1&vdl.dax.test=true&channelID=SS1", "_self");
                    break;
                case 403: //Red Button
                    window.open("splash.html", "_self");
                    break;
                case 404: //Green Button
                    window.open("../channelManagerExample.html", "_self");
                    break;
                case 405: //Yellow Button
                    window.open(baseURL + "app1/sportsapp.html?ishd=1&vdl.dax.test=true", "_self");
                    break;
                case 406: //Blue Button
                    window.open("prodmenu.html", "_self");
                    break;
                }


                document.getElementById("keyCodeBox").innerHTML = event.keyCode;

            }

        }
    </script>
